@model MTOGO.Web.Models.Restaurant.RestaurantDto

<link rel="stylesheet" href="~/css/restaurant-details.css" asp-append-version="true" />
<input type="hidden" id="userId" value="@User.FindFirst("UserId")?.Value" />
<div class="container my-5">
    <div class="row">
        <!-- Left Column: Restaurant Info -->
        <div class="col-md-4">
            <div class="restaurant-info">
                <h2>@Model.RestaurantName</h2>
                <p class="restaurant-description">@Model.RestaurantDescription</p>
                <h5>Contact</h5>
                <p><i class="bi bi-envelope"></i> Email: <a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a></p>
                <p><i class="bi bi-telephone"></i> Phone: @Model.ContactPhone</p>
                <h5>Address</h5>
                <p>
                    @Model.Address.AddressLine1<br />
                    @if (!string.IsNullOrEmpty(Model.Address.AddressLine2))
                    {
                        @Model.Address.AddressLine2
                        <br />
                    }
                    @Model.Address.City, @Model.Address.ZipCode<br />
                    @Model.Address.Country
                </p>
            </div>
        </div>

        <!-- Right Column: Menu Items -->
        <div class="col-md-8">
            <h3>Menu</h3>
            @if (Model.MenuItems != null && Model.MenuItems.Any())
            {
                <div class="menu-grid">
                    @foreach (var menuItem in Model.MenuItems)
                    {
                        <div class="menu-card">
                            <div class="menu-image">
                                <img src="~/images/restaurant.jpg" alt="@menuItem.Name">
                            </div>
                            <div class="menu-content">
                                <div class="menu-details">
                                    <h4>@menuItem.Name</h4>
                                    <p>@menuItem.Description</p>
                                </div>
                                <div class="menu-bottom">
                                    <p class="menu-price">$@menuItem.Price.ToString("F2")</p>
                                    <button class="btn btn-primary add-to-cart" data-id="@menuItem.Id">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No menu items available.</p>
            }
        </div>
    </div>

    <!-- Modal for Add to Cart -->
    <div class="modal fade" id="shoppingCartModal" tabindex="-1" aria-labelledby="shoppingCartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="shoppingCartModalLabel">Add to Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 id="menuItemName"></h6>
                    <p id="menuItemDescription"></p>
                    <div class="d-flex align-items-center justify-content-between">
                        <span>Quantity:</span>
                        <input type="number" id="menuItemQuantity" class="form-control" min="1" value="1" style="width: 80px;" />
                    </div>
                    <p class="mt-3">Price per item: <span id="menuItemPrice"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmAddToCart" class="btn btn-primary">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        let selectedMenuItemId = null;

        // Open modal on Add to Cart click
        $(document).on("click", ".add-to-cart", function () {
            selectedMenuItemId = $(this).data("id");
            const itemName = $(this).closest(".menu-content").find("h4").text();
            const itemDescription = $(this).closest(".menu-content").find("p").first().text();
            const itemPrice = $(this).closest(".menu-content").find(".menu-price").text();

            // Populate modal fields
            $("#menuItemName").text(itemName);
            $("#menuItemDescription").text(itemDescription);
            $("#menuItemPrice").text(itemPrice);

            // Open modal using Bootstrap 5 API
            const shoppingCartModal = new bootstrap.Modal(document.getElementById("shoppingCartModal"));
            shoppingCartModal.show();
        });

        // Confirm Add to Cart
        $("#confirmAddToCart").on("click", function () {
            const quantity = parseInt($("#menuItemQuantity").val());
            if (quantity <= 0) {
                alert("Please enter a valid quantity.");
                return;
            }

            // Example POST request for adding to cart
            $.ajax({
                url: "/ShoppingCart/Create",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({
                    userId: $("#userId").val(),
                    items: [{ menuItemId: selectedMenuItemId, quantity: quantity }]
                }),
                success: function () {
                    alert("Item added to cart successfully!");
                },
                error: function () {
                    alert("Failed to add item to cart.");
                }
            });

            // Close the modal
            const shoppingCartModal = bootstrap.Modal.getInstance(document.getElementById("shoppingCartModal"));
            shoppingCartModal.hide();
        });
    });

</script>